# ------ directory --------

alias ..="cd ../.."
alias .="cd .."

# ------ application -------

alias x="exit"
alias cls="clear"
alias bye="shutdown now"
alias v="nvim"
alias ff="fastfetch --kitty-direct ~/.config/fastfetch/eren.png"
