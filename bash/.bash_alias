#!/bin/bash

# -------------------------------- This is used to store the shortcut key --------------------------------

# ------ directory --------

alias ..="cd ../.."
alias .="cd .."

# ------ application -------

alias x="exit"
alias cls="clear"
alias bye="shutdown now"
alias v="nvim"
alias ff="fastfetch --kitty-direct ~/.config/fastfetch/eren.png"
alias tm="btop"
alias fm="yazi"
alias gm="nvtop"

# ------ network -------

alias nm="nmtui"
alias bm="blendr"
alias boff="bluetoothctl power off"
alias bon="bluetoothctl power on"
alias woff="nmcli radio wifi off"
alias won="nmcli radio wifi on"

# ------ miscellaneous --------

alias iruka="ping 8.8.8.8"
alias st="speedtest-cli"
alias thm="sudo openvpn ~/Downloads/vpn/tryhackme/shadow.exe.ovpn"
alias ll="lsd -al"
alias ls="lsd"
alias c="wl-copy"

# ------ bash -------

# ------ edit -------

alias eb="nvim ~/.bashrc"
alias ea="nvim ~/.bash_alias"
alias ef="nvim ~/.bash_functions"

# ------ source ------

alias sb="source ~/.bashrc"

# ------ temp -------

alias gen="sqlc generate"
alias db="go run ./temp/dbinit.go"
alias rundb="psql -U admin -d snsmsdb -p 8500"
alias f="cd ~/ServerManagementSuite/frontend;npm run dev -- --host"
alias b="cd ~/ServerManagementSuite/backend;go run main.go"
alias c="cd ~/ServerManagementSuite/client/linux;sudo go run main.go"
alias h="sudo wihotspot-gui"
